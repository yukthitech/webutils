<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
	<Appenders>
		<Console name="STDOUT" target="SYSTEM_OUT">
			<PatternLayout pattern="%5p %d [%t] [%X{user}-%X{token}] (%F:%L) - %m%n" />
		</Console>
	</Appenders>
	
	<Loggers>
		<Logger name="com.yukthitech" level="debug" />
		<Logger name="com.recruitment" level="debug" />
		<Logger name="org.springframework" level="error" />

		<Root level="error">
			<AppenderRef ref="STDOUT" />
		</Root>
	</Loggers>
</Configuration>
